{
  "name": "prettier-plugin-ember-hbs-tag",
  "version": "0.4.6",
  "description": "Prettier plugin to format hbs tags",
  "keywords": [
    "ember",
    "emberjs",
    "prettier",
    "prettier-plugin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ijlee2/prettier-plugin-ember-hbs-tag.git"
  },
  "license": "MIT",
  "author": "Isaac J. Lee",
  "type": "module",
  "main": "dist/src/index.js",
  "directories": {
    "test": "tests"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "./build.sh --production",
    "format": "prettier . --cache --write",
    "lint": "concurrently \"pnpm:lint:*(!fix)\" --names \"lint:\"",
    "lint:fix": "concurrently \"pnpm:lint:*:fix\" --names \"fix:\" && pnpm format",
    "lint:format": "prettier . --cache --check",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "prepare": "pnpm build",
    "release:prepare": "changeset version",
    "release:publish": "pnpm build && changeset publish",
    "test": "./build.sh --test && mt dist-for-testing --quiet",
    "update-test-fixtures": "pnpm build && node \"update-test-fixtures.mjs\""
  },
  "dependencies": {
    "@babel/core": "^7.28.0"
  },
  "devDependencies": {
    "@babel/types": "^7.28.2",
    "@changesets/cli": "^2.29.5",
    "@changesets/get-github-info": "^0.6.0",
    "@codemod-utils/files": "^3.0.3",
    "@codemod-utils/tests": "^2.0.2",
    "@ijlee2-frontend-configs/eslint-config-node": "^2.1.0",
    "@ijlee2-frontend-configs/prettier": "^2.1.0",
    "@sondr3/minitest": "^0.1.2",
    "@tsconfig/node20": "^20.1.6",
    "@tsconfig/strictest": "^2.0.5",
    "@types/babel__core": "^7.20.5",
    "@types/node": "^20.19.9",
    "concurrently": "^9.2.0",
    "eslint": "^9.32.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "prettier": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": false
    }
  },
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": "20.* || >= 22"
  }
}
